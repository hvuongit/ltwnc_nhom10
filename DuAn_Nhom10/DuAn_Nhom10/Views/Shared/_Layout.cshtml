<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KTV Study</title>

    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/layout.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
</head>

<body style="font-family: 'Josefin Sans', sans-serif;">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="ktvStudy">@Html.ActionLink("KTVStudy.Com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav la-navbar">
                    <li class="la-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="la-item">@Html.ActionLink("Liên Hệ", "Contact", "Home")</li>

                    <li class="la-item" style="border:none" id="nav-login">@Html.ActionLink("Đăng nhập", "Login", "Home")</li>
                    <li class="dropdown" id="av-user">
                        <img class="img-circle avatar" style="width:50px; height:50px; margin-top:5px; margin-left:15px" data-toggle="dropdown" />
                        <ul class="dropdown-menu" style="box-shadow: -1px 1px 50px 10px black; border-radius: 10px;">
                            <li id="name-user"></li>
                            <li id="email-user"></li>
                            <li><a href="#" onclick="signOut()"><b>⍈ Đăng xuất</b></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KTV Study</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/layout.js")

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/CheckLogin.js"></script>

</body>
</html>
